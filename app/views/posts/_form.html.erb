<%= form_with model: @post do |form| %>
  <p>
    <b>New post</b><br>
    <%= form.label :title %>
    <%= form.text_field :title %> <br>
    <%= form.label :content %>
    <%= form.text_field :content %>
    <%= form.hidden_field(:parent, :value => parent) %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
